{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "palette": {
    "white": "#FFFFFF",
    "tan": "#CC3802",
    "teal": "#047E84",
    "blue": "#06969a",
    "plum": "#9A348E",
    "blush": "#DA627D",
    "salmon": "#FCA17D",
    "sunrise":"#faaf5e",
    "sky": "#86BBD8",
    "teal_blue": "#33658A"
  },
  "blocks": [
    {
      "alignment": "left",
      "segments": [
        {
          "type": "text",
          "style": "diamond",
          "foreground": "p:sunrise",
          "template": " \udb80\udd09 {{ if .Env.CHRONO_DURATION }}{{ .Env.CHRONO_DURATION }}{{ else }}timer{{ end }} "
        }
      ],
      "type": "rprompt"
    },
    {
      "alignment": "left",
      "segments": [

        {
          "background": "p:sunrise",
          "foreground": "p:white",
          "leading_diamond": "\ue0b6",
          "style": "powerline",
          "template": " \uf135 {{ .UserName }} ",
          "type": "session"
        },
        {
          "background": "p:blush",
          "foreground": "p:white",
          "powerline_symbol": "\ue0b0",
          "properties": {
            "style": "agnoster_short",
            "max_depth": 2
          },
          "style": "powerline",
          "template": " {{ .Path }} ",
          "type": "path"
        },
        {
          "background": "p:salmon",
          "foreground": "p:white",
          "powerline_symbol": "\ue0b0",
          "properties": {
            "branch_icon": "",
            "fetch_stash_count": true,
            "fetch_status": false,
            "fetch_upstream_icon": true
          },
          "style": "powerline",
          "template": " \u279c {{ if .IsGitRepo }}dff ({{ .UpstreamIcon }}{{ .HEAD }}){{ else }}git{{ end }} ",
          "type": "git"
        },

        {
          "background": "p:sky",
          "foreground": "p:white",
          "powerline_symbol": "\ue0b0",
          "style": "powerline",
          "template": " \ue718 {{ if .PackageManagerIcon }}{{ .PackageManagerIcon }}{{ .Full }}{{ else }}node{{ end }} ",
          "type": "node"
        },
        {
          "background": "p:sky",
          "foreground": "p:white",
          "powerline_symbol": "\ue0b0",
          "style": "powerline",
          "template": " \uFCD1 {{ if .Full }}{{ .Full }}{{ else }}go{{ end }} ",
          "type": "go"
        },
        {
          "background": "p:teal_blue",
          "foreground": "p:white",
          "properties": {
            "time_format": "3:04 pm"
          },
          "style": "diamond",
          "template": " \u2665 {{ .CurrentDate | date .Format }} ",
          "type": "time"
        },
        {
          "background": "p:blue",
          "foreground": "p:white",
          "powerline_symbol": "\ue0b0",
          "style": "powerline",
          "template": " {{ if not .Error }}{{ .Icon }}{{ .Percentage }}{{ else }}\uf240 100%{{ end }} ",
          "properties": {
            "discharging_icon": " ",
            "charging_icon": " ",
            "charged_icon": " "
          },
          "trailing_diamond": "\ue0b0",
          "type": "battery"
        }
      ],
      "type": "prompt"
    }
  ],
  "final_space": true,
  "version": 3
}