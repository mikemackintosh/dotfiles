{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "palette": {
    "white": "#FFFFFF",
    "tan": "#CC3802",
    "teal": "#047E84",
    "blue": "#06969a",
    "plum": "#b752ac",
    "blush": "#DA627D",
    "salmon": "#FCA17D",
    "sunrise":"#faaf5e",
    "sky": "#86BBD8",
    "teal_blue": "#33658A"
  },
  "blocks": [
    {
      "alignment": "left",
      "segments": [
        {
          "type": "executiontime",
          "style": "diamond",
          "powerline_symbol": "",
          "foreground": "p:sunrise",
          "template": " \udb80\udd09 {{ .FormattedMs }} ",
          "properties": {
            "threshold": 500,
            "style": "austin",
            "always_enabled": true
          }
        }
      ],
      "type": "rprompt"
    },
    {
      "alignment": "left",
      "segments": [
        {
          "type": "session",
          "leading_diamond": "\ue0b6",
          "style": "powerline",
              "foreground": "#ffffff",
          "background": "#c386f1",
          "trailing_diamond": "",
          "template": "{{ if .SSHSession }} {{ end }} \uf135 {{ .UserName }}"
        },
        {
          "background": "p:blush",
          "foreground": "p:white",
          "powerline_symbol": "\ue0b0",
          "properties": {
            "style": "letter",
            "mixed_threshold": 2,
            "max_depth": 2
          },
          "style": "powerline",
          "template": " {{ .Path }} ",
          "type": "path"
        },
        {
          "background": "p:salmon",
          "foreground": "p:white",
          "powerline_symbol": "\ue0b0",
          "properties": {
            "branch_icon": "",
            "fetch_stash_count": true,
            "fetch_status": false,
            "fetch_upstream_icon": true
          },
          "style": "powerline",
          "template": " \u279c {{ if .IsGitRepo }}dff ({{ .UpstreamIcon }}{{ .HEAD }}){{ else }}git{{ end }} ",
          "type": "git"
        },

        {
          "background": "p:sky",
          "foreground": "p:white",
          "powerline_symbol": "\ue0b0",
          "style": "accordion",
          "template": "\uFCD1 {{ if .Full }}{{ .Full }}{{ else }}go{{ end }} ",
          "type": "text"
        },
        {
          "background": "p:blue",
          "foreground": "p:white",
          "powerline_symbol": "\ue0b0",
          "style": "accordion",
          "type": "text"
        },
        {
          "background": "p:teal_blue",
          "foreground": "p:white",
          "trailing_diamond": "\ue0b0",
          "properties": {
            "time_format": "3:04 pm"
          },
          "style": "diamond",
          "template": " \u2665 {{ .CurrentDate | date .Format }} ",
          "type": "time"
        }
      ],
      "type": "prompt"
    }
  ],
  "final_space": true,
  "version": 3
}